  "movementTaskConfigTemplate": [
    {
      "id": "category",
      "label": "Category",
      "type": "text",
      "required": false,
      "group": "primary",
      "explainer": "SKU category identifier"
    },
    {
      "id": "skuClassType",
      "label": "SKU Class Type",
      "type": "text",
      "required": false,
      "group": "primary",
      "explainer": "Type of SKU classification"
    },
    {
      "id": "skuClass",
      "label": "SKU Class",
      "type": "text",
      "required": false,
      "group": "primary",
      "explainer": "SKU class identifier"
    },
    {
      "id": "uom",
      "label": "Unit of Measure",
      "type": "dropdown",
      "required": false,
      "defaultValue": "L0",
      "group": "primary",
      "explainer": "Unit of measure for SKU level (e.g., L0, L1)",
      "options": [
        { "value": "L0", "label": "L0" },
        { "value": "L1", "label": "L1" },
        { "value": "L2", "label": "L2" },
        { "value": "L3", "label": "L3" }
      ]
    },
    {
      "id": "bucket",
      "label": "Bucket",
      "type": "dropdown",
      "required": false,
      "defaultValue": "Good",
      "group": "primary",
      "explainer": "Quality bucket for SKU (e.g., Good, Damaged)",
      "options": [
        { "value": "Good", "label": "Good" },
        { "value": "Damaged", "label": "Damaged" }
      ]
    },
    {
      "id": "channel",
      "label": "Channel",
      "type": "text",
      "required": false,
      "group": "primary",
      "explainer": "Sales or distribution channel (e.g., online, retail)"
    },
    {
      "id": "customer",
      "label": "Customer",
      "type": "text",
      "required": false,
      "group": "primary",
      "explainer": "Customer or client identifier for the line item"
    },
    {
      "id": "taskSequence",
      "label": "Task Sequence",
      "type": "array",
      "required": true,
      "group": "defineTaskSequence",
      "explainer": "Defines the sequence of tasks to be executed.",
      "items": {
        "type": "object",
        "fields": [
          {
            "id": "taskKind",
            "label": "Task Kind",
            "type": "dropdown",
            "required": true,
            "options": [
              { "value": "", "label": "None" },
              { "value": "AUTO_REPLEN", "label": "Auto Replenishment" },
              { "value": "INBOUND_PUTAWAY", "label": "Inbound Put Away" },
              { "value": "INBOUND_RECEIVE", "label": "Inbound Receive" },
              { "value": "INTERNAL_MOVEMENT", "label": "Internal Movement" },
              { "value": "OUTBOUND_REPLEN", "label": "Outbound Replenishment" },
              { "value": "OUTBOUND_PICK", "label": "Outbound Pick" },
              { "value": "OUTBOUND_LOAD", "label": "Outbound Load" }
            ],
            "explainer": "Type of the task within the task sequence."
          },
          {
            "id": "taskSubKind",
            "label": "Task Sub-Kind",
            "type": "text",
            "required": false,
            "explainer": "Optional subcategory for more specific task classification."
          }
        ]
      }
    },
    {
      "id": "ginAckByApi",
      "label": "GIN Acknowledgement by API",
      "type": "checkbox",
      "required": false,
      "defaultValue": true,
      "group": "defineTaskSequence",
      "explainer": "If true, GIN will be acknowledged via API instead of manual confirmation."
    },
    {
      "id": "ginAckLevel",
      "label": "GIN Acknowledgement Level",
      "type": "dropdown",
      "required": false,
      "defaultValue": "SHIPMENT",
      "group": "defineTaskSequence",
      "explainer": "Defines the level at which GIN is acknowledged.",
      "options": [
        { "value": "NONE", "label": "None" },
        { "value": "ORDER", "label": "Order" },
        { "value": "SHIPMENT", "label": "Shipment" },
        { "value": "ITEM", "label": "Item" }
      ]
    },
    {
      "id": "retryOnFailure",
      "label": "Retry on Failure",
      "type": "checkbox",
      "defaultValue": true,
      "group": "advanced-reliability"
    },
    {
      "id": "maxRetries",
      "label": "Max Retries",
      "type": "number",
      "required": false,
      "defaultValue": 3,
      "validation": { "min": 0, "max": 10 },
      "group": "advanced-reliability"
    },
    {
      "id": "notificationEnabled",
      "label": "Enable Notifications",
      "type": "checkbox",
      "defaultValue": false,
      "group": "advanced-alerts"
    },
    {
      "id": "alertThreshold",
      "label": "Alert Threshold (seconds)",
      "type": "number",
      "required": false,
      "defaultValue": 300,
      "validation": { "min": 10, "max": 3600 },
      "group": "advanced-alerts"
    }
  ],
