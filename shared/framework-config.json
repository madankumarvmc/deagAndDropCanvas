  "movementTaskConfigTemplate": [
    {
      "id": "category",
      "label": "Category",
      "type": "text",
      "required": false,
      "group": "primary",
      "explainer": "SKU category identifier"
    },
    {
      "id": "skuClassType",
      "label": "SKU Class Type",
      "type": "text",
      "required": false,
      "group": "primary",
      "explainer": "Type of SKU classification"
    },
    {
      "id": "skuClass",
      "label": "SKU Class",
      "type": "text",
      "required": false,
      "group": "primary",
      "explainer": "SKU class identifier"
    },
    {
      "id": "uom",
      "label": "Unit of Measure",
      "type": "dropdown",
      "required": false,
      "defaultValue": "L0",
      "group": "primary",
      "explainer": "Unit of measure for SKU level (e.g., L0, L1)",
      "options": [
        { "value": "L0", "label": "L0" },
        { "value": "L1", "label": "L1" },
        { "value": "L2", "label": "L2" },
        { "value": "L3", "label": "L3" }
      ]
    },
    {
      "id": "bucket",
      "label": "Bucket",
      "type": "dropdown",
      "required": false,
      "defaultValue": "Good",
      "group": "primary",
      "explainer": "Quality bucket for SKU (e.g., Good, Damaged)",
      "options": [
        { "value": "Good", "label": "Good" },
        { "value": "Damaged", "label": "Damaged" }
      ]
    },
    {
      "id": "channel",
      "label": "Channel",
      "type": "text",
      "required": false,
      "group": "primary",
      "explainer": "Sales or distribution channel (e.g., online, retail)"
    },
    {
      "id": "customer",
      "label": "Customer",
      "type": "text",
      "required": false,
      "group": "primary",
      "explainer": "Customer or client identifier for the line item"
    },
    {
      "id": "taskKind",
      "label": "Task Kind",
      "type": "select",
      "required": true,
      "group": "pickStrategy",
      "options": [
        { "value": "NONE", "label": "None" },
        { "value": "OUTBOUND_PICK", "label": "Outbound Pick" },
        { "value": "OUTBOUND_REPLEN", "label": "Outbound Replen" },
        { "value": "AUTO_REPLEN", "label": "Auto Replen" },
        { "value": "OUTBOUND_LOAD", "label": "Outbound Load" },
        { "value": "OUTBOUND_UNPICK", "label": "Outbound Unpick" }
      ],
      "explainer": "The kind of movement task, e.g., AUTO_REPLEN"
    },
    {
      "id": "strat",
      "label": "Pick Strategy",
      "type": "dropdown",
      "required": false,
      "group": "pickStrategy",
      "options": [
        { "value": "NONE", "label": "None" },
        { "value": "PICK_BY_TRIP", "label": "Pick by Trip" },
        { "value": "PICK_BY_CUSTOMER", "label": "Pick by Customer" },
        { "value": "PICK_BY_INVOICE", "label": "Pick by Invoice" },
        { "value": "PICK_ALL_TRIPS", "label": "Pick All Trips" }
      ],
      "explainer": "Picking Task is created according to this defined strategy. E.g., in PICK_BY_CUSTOMER, the picking task is grouped by Customer."
    },
    {
      "id": "loadingStrategy",
      "label": "Loading Strategy",
      "type": "dropdown",
      "required": false,
      "group": "pickStrategy",
      "options": [
        { "value": "NONE", "label": "None" },
        { "value": "LOAD_BY_CUSTOMER", "label": "Load by Customer" },
        { "value": "LOAD_BY_TRIP", "label": "Load by Trip" }
      ],
      "explainer": "Strategy for loading operations, either by customer grouping or by trip grouping."
    },
    {
      "id": "groupBy",
      "label": "Group By",
      "type": "multiselect",
      "required": false,
      "group": "pickStrategy",
      "options": [
        { "value": "category", "label": "Category" },
        { "value": "customer", "label": "Customer" },
        { "value": "location", "label": "Location" },
        { "value": "skuClass", "label": "SKU Class" },
        { "value": "trip", "label": "Trip" }
      ],
      "explainer": "Fields used to group the task items. You can group by one or more dimensions like category, location, or customer."
    },
    {
      "id": "taskLabel",
      "label": "Task Label",
      "type": "text",
      "required": false,
      "group": "pickStrategy",
      "explainer": "Custom label or name assigned to this task for identification"
    },
    {
      "id": "mode",
      "label": "Mode",
      "type": "select",
      "required": true,
      "group": "stockAndBinAllocation",
      "options": [
        { "value": "PICK", "label": "Pick" },
        { "value": "PUT", "label": "Put" }
      ],
      "explainer": "The task mode determines the operation type, such as PICK, PUT."
    },
    {
      "id": "priority",
      "label": "Priority",
      "type": "number",
      "required": false,
      "group": "stockAndBinAllocation",
      "explainer": "Numeric value indicating the priority of the task. Lower values imply higher priority."
    },
    {
      "id": "skipZoneFace",
      "label": "Skip Zone Face",
      "type": "select",
      "required": false,
      "group": "stockAndBinAllocation",
      "options": [
        { "value": "PICK", "label": "Pick" },
        { "value": "PUTAWAY", "label": "Putaway" },
        { "value": "NONE", "label": "None" }
      ],
      "explainer": "Specifies if zone face should be skipped during certain operations, e.g., during picking."
    },
    {
      "id": "searchScope",
      "label": "Search Scope",
      "type": "select",
      "required": false,
      "group": "stockAndBinAllocation",
      "options": [
        { "value": "WH", "label": "Warehouse" },
        { "value": "ZONE", "label": "Zone" },
        { "value": "AREA", "label": "Area" }
      ],
      "explainer": "Defines the scope within which locations or inventory will be searched."
    },
    {
      "id": "statePreferenceOrder",
      "label": "State Preference Order",
      "type": "multiselect",
      "required": false,
      "group": "stockAndBinAllocation",
      "options": [
        { "value": "PURE", "label": "Pure" },
        { "value": "SKU PURE", "label": "Sku Puru" },
        { "value": "IMPURE", "label": "Impure" },
        { "value": "SKU IMPURE", "label": "Sku Impure" }
      ],
      "explainer": "Preference order for inventory state (e.g., PURE before MIXED)."
    },
    {
      "id": "batchPreferenceMode",
      "label": "Batch Preference Mode",
      "type": "select",
      "required": false,
      "group": "stockAndBinAllocation",
      "options": [{ "value": "CLOSEST_PREVIOUS", "label": "Closest Previous" }],
      "explainer": "Determines which inventory batch to prefer during picking or allocation."
    },
    {
      "id": "areaTypes",
      "label": "Area Types",
      "type": "multiselect",
      "required": false,
      "group": "stockAndBinAllocation",
      "options": [
        { "value": "INVENTORY", "label": "Inventory" },
        { "value": "STAGING", "label": "Staging" },
        { "value": "SHIPPING", "label": "Shipping" }
      ],
      "explainer": "Specifies which types of areas are considered in the task."
    },
    {
      "id": "areas",
      "label": "Areas",
      "type": "text",
      "required": false,
      "group": "stockAndBinAllocation",
      "explainer": "List of specific area identifiers to include in this task configuration."
    },
    {
      "id": "optimizationMode",
      "label": "Optimization Mode",
      "type": "select",
      "required": false,
      "group": "stockAndBinAllocation",
      "options": [
        { "value": "TOUCH", "label": "Touch" },
        { "value": "DISTANCE", "label": "Distance" },
        { "value": "TIME", "label": "Time" }
      ],
      "explainer": "Defines the optimization strategy for task execution (e.g., minimize touchpoints or travel distance)."
    },
    [
      {
        "id": "scanSourceHUKind",
        "label": "Scan Source HU Kind",
        "type": "select",
        "required": false,
        "group": "huFormation",
        "options": [
          { "value": "PALLET", "label": "Pallet" },
          { "value": "NONE", "label": "None" }
        ],
        "explainer": "Type of HU (Handling Unit) to scan at source. Use NONE if scanning is not required."
      },
      {
        "id": "pickSourceHUKind",
        "label": "Pick Source HU Kind",
        "type": "select",
        "required": false,
        "group": "huFormation",
        "options": [
          { "value": "PALLET", "label": "Pallet" },
          { "value": "NONE", "label": "None" }
        ],
        "explainer": "Type of source HU used during picking."
      },
      {
        "id": "carrierHUKind",
        "label": "Carrier HU Kind",
        "type": "select",
        "required": false,
        "group": "huFormation",
        "options": [
          { "value": "PALLET", "label": "Pallet" },
          { "value": "NONE", "label": "None" }
        ],
        "explainer": "Type of HU used for carrying the picked items."
      },
      {
        "id": "huMappingMode",
        "label": "HU Mapping Mode",
        "type": "select",
        "required": false,
        "group": "huFormation",
        "options": [
          { "value": "AREA", "label": "Area" },
          { "value": "BIN", "label": "Bin" }
        ],
        "explainer": "Determines how handling units are mapped, either by area or by bin."
      },
      {
        "id": "dropHUQuantThreshold",
        "label": "Drop HU Quantity Threshold",
        "type": "number",
        "required": false,
        "group": "huFormation",
        "explainer": "Minimum quantity threshold to trigger HU drop."
      },
      {
        "id": "dropUOM",
        "label": "Drop UOM",
        "type": "text",
        "required": false,
        "group": "huFormation",
        "explainer": "Unit of Measure used at the drop point (e.g., L0, L1)."
      },
      {
        "id": "allowComplete",
        "label": "Allow Complete",
        "type": "checkbox",
        "required": false,
        "group": "huFormation",
        "explainer": "Whether completing a task without partial drops is allowed."
      },
      {
        "id": "swapHUThreshold",
        "label": "Swap HU Threshold",
        "type": "number",
        "required": false,
        "group": "huFormation",
        "explainer": "Threshold for replacing HU when a certain quantity is reached."
      },
      {
        "id": "dropInnerHU",
        "label": "Drop Inner HU",
        "type": "checkbox",
        "required": false,
        "group": "huFormation",
        "explainer": "Enable dropping inner HUs instead of full containers."
      },
      {
        "id": "allowInnerHUBreak",
        "label": "Allow Inner HU Break",
        "type": "checkbox",
        "required": false,
        "group": "huFormation",
        "explainer": "Allow breaking inner handling units during the task."
      },
      {
        "id": "displayDropUOM",
        "label": "Display Drop UOM",
        "type": "checkbox",
        "required": false,
        "group": "huFormation",
        "explainer": "Whether to show drop unit of measure during operation."
      },
      {
        "id": "autoUOMConversion",
        "label": "Auto UOM Conversion",
        "type": "checkbox",
        "required": false,
        "group": "huFormation",
        "explainer": "Automatically convert UOM based on inventory configuration."
      },
      {
        "id": "huWeightThreshold",
        "label": "HU Weight Threshold",
        "type": "number",
        "required": false,
        "group": "huFormation",
        "explainer": "Maximum weight allowed in a single HU before a new HU is required."
      },
      {
        "id": "pickBundles",
        "label": "Pick Bundles",
        "type": "checkbox",
        "required": false,
        "group": "huFormation",
        "explainer": "Enable picking items in bundles instead of individual units."
      },
      {
        "id": "enableEditQtyInPickOp",
        "label": "Enable Edit Quantity in Pick Operation",
        "type": "checkbox",
        "required": false,
        "group": "huFormation",
        "explainer": "Allows editing picked quantity during pick operations."
      },
      {
        "id": "dropSlottingMode",
        "label": "Drop Slotting Mode",
        "type": "select",
        "required": false,
        "group": "huFormation",
        "options": [
          { "value": "AREA", "label": "Area" },
          { "value": "BIN", "label": "Bin" }
        ],
        "explainer": "Defines how items are slotted during drop ‚Äî by AREA or BIN."
      },
      {
        "id": "enableManualDestBinSelection",
        "label": "Enable Manual Destination Bin Selection",
        "type": "checkbox",
        "required": false,
        "group": "huFormation",
        "explainer": "Allows the operator to manually select the destination bin."
      }
    ]
  ],
